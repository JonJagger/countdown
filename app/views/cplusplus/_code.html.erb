
<script type="text/javascript"><!--

$(function() {

  cd.code = {
    reset: function() {
      tokens   = [];
      comments = [];
      redraw();
    },
    add: function(token, comment) {
      tokens.push(token);
      comments.push(comment);
      redraw();
    }
  };

  // - - - - - - - - - - - - - - - -

  var tokens   = undefined;
  var comments = undefined;

  function redraw() {
    var code =
      'const vector<string> tokens =' + "\n" +
      '{' + "\n";
    for (i = 0; i < tokens.length; i++) {
      var token = tokens[i];
      var rep = "";
      for (j = 0; j < token.length; j++) {
        var ch = token.charAt(j);
        if (ch == '"')
          rep += '\\"';
        else if (ch == '\\')
          rep += '\\\\';
        else
          rep += ch;
      }
      code += '    ';
      code += '"' + rep + '",';
      for (j = 0; j < (18-rep.length); j++) {
        code += ' ';
      }
      code += ' // ' + comments[i] + "\n";
    }
    code += '};';
    $('textarea#code').val(code);
  }

  cd.code.reset();
  redraw();

});

//--></script>

<textarea id="code" readonly="readonly"></textarea>
