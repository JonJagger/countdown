
<script type="text/javascript"><!--

$(function() {

  cd.resetCode = function() {
    tokens = [];
    comments = [];
    redraw();
  };

  cd.chose = function(token, comment) {
    tokens.push(token);
    comments.push(comment);
    redraw();
  };

  // - - - - - - - - - - - - - - - -

  var tokens = [];
  var comments = [];

  var redraw = function() {
    var code =
      'const vector<string> tokens =' + "\n" +
      '{' + "\n";
    for (i = 0; i < tokens.length; i++) {
      code += '    ';

      var token = tokens[i];
      var rep = "";
      for (j = 0; j < token.length; j++) {
        var ch = token.charAt(j);
        if (ch == '"')
          rep += '\\"';
        else if (ch == '\\')
          rep += '\\\\';
        else
          rep += ch;
      }
      code += '"' + rep + '",';
      for (j = 0; j < (15-rep.length); j++) {
        code += ' ';
      }

      code += ' // ' + comments[i] + "\n";
    }
    code += '};';
    $('textarea#code').val(code);
  };

  redraw();

});

//--></script>

<textarea id="code" readonly="readonly"></textarea>
