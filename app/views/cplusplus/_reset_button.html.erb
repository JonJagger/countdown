
<script type="text/javascript"><!--

$(function() {

  cd.cpp = {
    keywords: [],
    identifiers: [],
    operators: [],
    punctuators: []
  };

  // - - - - - - - - - - - - - - - - - - - - - -

  $('#reset').click(function() { reset(); });

  function reset() {
    resetTokens();
    cd.code.reset();
  }

  function resetTokens() {
    var lang = cd.cpp;
    lang.keywords = [
      'catch',
      'class',
      'continue',
      'default',
      'dynamic_cast',
      'else',
      'friend',
      'goto',
      'if',
      'operator',
      'reinterpret_cast',
      'return',
      'static_cast',
      'switch',
      'template',
      'typename',
      'virtual',
      'while'
    ];
    lang.identifiers = [
      'wibble', 'snafu', 'foobar', 'x', 'd_33df8'
    ];
    lang.operators = [
      '++', '--', '+=', '==', '<=', '!=', '&&', '!',
      '~', '?', '.', '->', ','
    ];
    lang.punctuators = [
      '(', '[', ',', ':', '...'
    ];
  }

  reset();

});

//--></script>

<button type="button" id="reset">reset</button>

