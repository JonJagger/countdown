
<script type="text/javascript"><!--

$(function() {

  $('#tokens button').each(function() {
    var type = $(this).attr('id');
    $(this).text(type.toUpperCase());
    $('#'+type).click(function() {
      select(type);
    });
  });

  function select(type) {
    var token = sample(cd.cpp[type+'s']);
    cd.code.add(token, type);
  }

  function sample(array) {
    shuffle(array);
    return array.shift();
  }

  function shuffle(array) {
    // Durstenfeld algorithm.
    for (var i = array.length - 1; i > 0; i--) {
      var j = Math.floor(Math.random() * (i + 1));
      var temp = array[i];
      array[i] = array[j];
      array[j] = temp;
    }
  }

});

