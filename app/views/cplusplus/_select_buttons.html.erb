
<script type="text/javascript"><!--

$(function() {

  $('#keyword'   ).click(function() { select('keyword',    cd.cpp.keywords);    });
  $('#identifier').click(function() { select('identifier', cd.cpp.identifiers); });
  $('#operator'  ).click(function() { select('operator',   cd.cpp.operators);   });
  $('#punctuator').click(function() { select('punctuator', cd.cpp.punctuators); });
  $('#literal'   ).click(function() { select('literal',    cd.cpp.literals);    });

  var select = function(comment, tokens) {
    cd.chose(sample(tokens), comment);
  };

  var sample = function(array) {
    shuffle(array);
    return array.shift();
  };

  var shuffle = function(array) {
    // Durstenfeld algorithm.
    for (var i = array.length - 1; i > 0; i--) {
      var j = Math.floor(Math.random() * (i + 1));
      var temp = array[i];
      array[i] = array[j];
      array[j] = temp;
    }
  };

});

